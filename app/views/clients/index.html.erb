<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }

  th {
    background-color: #f2f2f2;
  }
</style>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Active</th>
      <th>Services</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.state %></td>
        <td><%= client.active %></td>
        <td>
          <% services = client.services.map(&:name).join(', ') %>
          <%= services.present? ? services : "No services" %>
        </td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Update', client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path %>
